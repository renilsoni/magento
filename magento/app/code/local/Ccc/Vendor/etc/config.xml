<?xml version="1.0"?>
<config>
	<modules>
		<Ccc_Vendor>
			<version>1.0.2</version>
		</Ccc_Vendor>
	</modules>
	<admin>
		<routers>
			<vendor>
				<use>admin</use>
				<args>
					<module>Ccc_Vendor</module>
					<frontName>vendor</frontName>
				</args>
			</vendor>
		</routers>
	</admin>
	<global>
		<blocks>
			<ccc_vendor>
				<class>Ccc_Vendor_Block</class>
			</ccc_vendor>
		</blocks>
		<helpers>
			<vendor>
				<class>Ccc_Vendor_Helper</class>
			</vendor>
		</helpers>
		<models>
			<ccc_vendor>
				<class>Ccc_Vendor_Model</class>
				<resourceModel>ccc_vendor_resource</resourceModel>
			</ccc_vendor>
			<ccc_vendor_resource>
				<class>Ccc_Vendor_Model_Resource</class>
				<entities>
					<data>
						<table>Ccc_vendor_data</table>
					</data>
				</entities>
			</ccc_vendor_resource>
		</models>
		<resources>
			<vendor_setup>
				<setup>
					<module>Ccc_Vendor</module>
				</setup>
			</vendor_setup>
		</resources>
	</global>
	<adminhtml>
		<layout>
			<updates>
				<ccc_vendor>
					<file>vendor.xml</file>
				</ccc_vendor>
			</updates>
		</layout>
	</adminhtml>
</config>
